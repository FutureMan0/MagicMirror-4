{
  "language": "de",
  "theme": "cyberpunk",
  "timeFormat": 24,
  "gridSettings": {
    "columns": 3,
    "rows": 3,
    "gap": 12,
    "padding": 12,
    "columnSizes": ["minmax(320px, 1fr)", "1fr", "1fr"],
    "rowSizes": ["auto", "1fr", "1fr"]
  },
  "modules": [
    {
      "module": "clock",
      "position": {
        "column": 1,
        "row": 1,
        "columnSpan": 1,
        "rowSpan": 1,
        "align": "start",
        "justify": "start"
      },
      "enabled": true,
      "config": {
        "timeFormat": "HH:mm:ss",
        "showDate": true,
        "dateFormat": "dddd, DD. MMMM YYYY"
      }
    },
    {
      "module": "weather",
      "position": {
        "column": 1,
        "row": 2,
        "columnSpan": 1,
        "rowSpan": 2,
        "align": "start",
        "justify": "start"
      },
      "enabled": true,
      "config": {
        "city": "Klagenfurt,AT",
        "units": "metric",
        "forecastDays": 5,
        "showEffects": true
      }
    },
    {
      "module": "untis",
      "position": {
        "column": 2,
        "row": 1,
        "columnSpan": 2,
        "rowSpan": 3,
        "align": "start",
        "justify": "start"
      },
      "enabled": true,
      "config": {
        "viewMode": "week"
      }
    },
    {
      "module": "spotify",
      "position": "bottom_left",
      "enabled": false,
      "config": {
        "showCover": true,
        "showProgress": true,
        "showSpotifyCode": true
      }
    },
    {
      "module": "presence",
      "position": "bottom_center",
      "enabled": false,
      "config": {
        "timeout": 60000,
        "dimTimeout": 300000
      }
    }
  ]
}